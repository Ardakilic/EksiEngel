{
	"name": "Ekşi Engel",
	"version": "0.1",
	"description": "Ekşisözlük'te toplu olarak engelleme/başlıklarını engelleme işlemini yapın.",
	"manifest_version": 3,
	"action": {
		"default_icon": {
			"16": "images/eksiengel16.png",
			"32": "images/eksiengel32.png",
			"48": "images/eksiengel48.png",
			"128": "images/eksiengel128.png"
			},
		"default_title": "Ekşi Engel",
		"default_popup": "popup.html"
	},
	"permissions": ["declarativeContent", "activeTab", "tabs", "downloads", "scripting"], 
	"host_permissions": [
		"http://www.eksisozluk.com/",
		"*://*/*"
  ],
	"background": {
		"service_worker": "background.js"
	}
}