{
	"manifest_version": 3,
  "name": "Ekşi Engel",
  "version": "1.2",
  "description": "Ekşi Sözlük'te toplu olarak engelleme/başlıklarını engelleme işlemi yapın.",
	"icons": {
		"16": "icons/eksiengel16.png",
		"32": "icons/eksiengel32.png",
		"48": "icons/eksiengel48.png",
		"128": "icons/eksiengel128.png"
		},
  "action": {
    "default_icon": {
      "16": "icons/eksiengel16.png",
      "32": "icons/eksiengel32.png",
      "48": "icons/eksiengel48.png",
      "128": "icons/eksiengel128.png"
      },
    "default_title": "Ekşi Engel",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "scripting", "storage", "notifications", "webNavigation"], 
  "host_permissions": [
    "https://eksisozluk.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
	"web_accessible_resources": [
    {
      "resources": ["icons/eksiengel16.png", 
										"icons/eksiengel32.png", 
										"icons/eksiengel48.png", 
										"icons/eksiengel128.png", 
										"assets/img/semsiye.png",
										"assets/img/mailicon.svg", 
										"assets/img/linkedinicon.svg", 
										"assets/img/questionicon.svg", 
										"assets/img/githubicon.svg", 
										"assets/img/pena.png",
										"popup.js", 
										"options.js",
										"assets/js/banUser.js", 
										"assets/js/banTitle.js",
										"assets/js/isTitleBanned.js", 
										"assets/js/isUserBanned.js",
										"assets/js/scrapAuthors.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}